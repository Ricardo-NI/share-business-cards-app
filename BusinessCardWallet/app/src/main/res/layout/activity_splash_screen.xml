<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SplashScreenActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_card"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:rotation="50"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:contentPadding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_card2"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:rotation="50"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:contentPadding="6dp"
        app:layout_constraintBottom_toTopOf="@+id/cardview_card"
        app:layout_constraintStart_toStartOf="@+id/cardview_card" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_card3"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:rotation="50"
        app:cardBackgroundColor="@color/red_light"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:contentPadding="6dp"
        app:layout_constraintBottom_toTopOf="@+id/cardview_card2"
        app:layout_constraintStart_toStartOf="@+id/cardview_card2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_card"
        app:srcCompat="@drawable/ic_wallet"
        app:tint="@color/dark_2" />


</androidx.constraintlayout.widget.ConstraintLayout>